@model Diploma.Models.Notification

@{
    ViewBag.Title = "Редактирование объявление" + Model.Title;
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <!-- Template Styles -->
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css">

    <!-- CSS Reset -->
    <link rel="stylesheet" href="~/Content/css/normalize.css">

    <!-- Milligram CSS minified -->
    <link rel="stylesheet" href="~/Content/css/milligram.min.css">

    <!-- Main Styles -->
    <link rel="stylesheet" href="~/Content/css/admin_style.css">

</head>
<body>
    <div class="row grid-responsive">
        <div class="column ">
            <div class="card">
                <div class="card-title">
                    <h3>Редактировать объявление @Model.Title</h3>
                </div>
                <div class="card-block">
                    @using (Html.BeginForm("EditNotification", "Admin", FormMethod.Post))
                    {
                    <fieldset>
                        <label for="nameField">Заголовок</label>
                        @Html.EditorFor(model => model.Title)
                        @Html.ValidationMessageFor(model => model.Title, "")

                        <label for="commentField">Описание объявления</label>
                        @Html.TextAreaFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description, "")

                        @Html.HiddenFor(model => model.Date)
                        @Html.HiddenFor(model => model.DocumentPath1)
                        @Html.HiddenFor(model => model.DocumentPath2)
                        @Html.HiddenFor(model => model.ID)
                        <input class="button-primary" type="submit" value="Редактировать">
                    </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</html>
