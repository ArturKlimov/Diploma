@model Diploma.ViewModels.HomeViewModel

@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Физико-Технический Институт ПетрГУ</title>
    <!-- Flickity style -->
    <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
    <!-- Your custom styles (optional) -->
    <link rel="stylesheet" href="~/Content/css/style_main.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    
    <!-- Flickity scripts-->
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
</head>

<body>
    <script>
        $(document).ready(function () {
            $(".carousel__item").each(function (index, value) {
                var text = $(this).find(".newscat").children("p").text();

                var block = $(this).find(".carousel__overlay1");

                if (text == "Достижения") {
                    block.css("background", "rgba(214, 16, 16, 0.87)");
                }

                if (text == "Культура") {
                    block.css("background", "rgba(0, 179, 82, 0.87)")
                }

                if (text == "Международная деятельность") {
                    block.css("background", "rgba(0, 111, 192, 0.87)")
                }

                if (text == "Наука и инновации") {
                    block.css("background", "#26b1c4")
                }

                if (text == "Образование") {
                    block.css("background", "#dc217a")
                }

                if (text == "Партнерство") {
                    block.css("background", "#e3b510")
                }

                if (text == "Спорт") {
                    block.css("background", "#e15d14")
                }

                if (text == "Университетская жизнь") {
                    block.css("background", "#e15d50")
                }
            });
        });
    </script>
    <!--ШАПКА-->
    <header>
        <div class="top_header">
            <div class="header_logo">ФТИ</div>
            <nav>
                <div class="header_menu" id="myHeader_menu">
                    <a href="/">Главная</a>
                    <a href="/news">Новости</a>
                    <a href="#">Мероприятия</a>
                    <a href="#">Объявления</a>
                    <a href="#">Видео</a>
                </div>
            </nav>

            <button class="buttonsearch"> <img src="~/Content/Images/search.png"></button>

            <div class="modal-container">
                <form class="form-wrapper">
                    <input type="text" id="search" placeholder="Поиск..." required>
                    <input type="submit" value="Найти" id="submit">
                </form>
                <center><button class="close-btn">X</button></center>

            </div>
        </div>
        <div class="bottom_header">
            <!--Блок ОБЪЯВЛЕНИЯ-->
            <div class="ads">
                <div class="adstopic">Объявления:</div>
                <div class="adscontent">
                    @foreach (var n in Model.Notifications)
                    {
                        <ul>
                            <li><a href="#">@n.Title  — @n.Date.ToString("M"), @n.Date.ToShortTimeString()</a></li>
                        </ul>

                        <p>@n.Description</p>

                        <br>
                    }
                </div>
            </div>
            <!--Карточки НОВОСТЕЙ-->
            <div class="news">
                <div class="carousel">
                    <div class="carousel__list" data-flickity='{ "imagesLoaded": true,"groupCells": true,  "pageDots": false }'>
                        @foreach (var n in Model.News)
                        {
                            <div class="carousel__item" style="background-image: url(@n.ImagePath);">
                                <div class="carousel__overlay1"></div>
                                <div class="carousel__content">
                                    <div class="newscat"><p>@n.Category.Title</p></div>
                                    <div class="newstopic">@n.Title</div>
                                    <div class="newsdate">@n.Date.ToString("M"), @n.Date.ToString("yyyy")</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

    </header>
    <main>

        <!--ВИДЕО-->
        <div class="video">
            <div class="top_video">
                <p>Видео</p>
                <ul>
                    <li><a href="#">все видео</a></li>
                </ul>
            </div>
            <div class="bottom_video">
                <div class="carousel_video">
                    <div class="carousel_video" data-flickity='{"groupCells": true,"pageDots": false}'>
                        <!--КАРТОЧКА-->
                        @foreach(var v in Model.Videos)
                        {
                            <div class="video_item">
                                <div class="videocontent">
                                    <div class="videoimg" style="background-image: url(https://img.youtube.com/vi/@v.YoutubeID/maxresdefault.jpg);">
                                        <div class="video_overlay">
                                            <img src="~/Content/Images/кнопка_плей.png" class="play">
                                        </div>
                                    </div>
                                </div>
                                <a href="#" class="btn">@v.Title</a>
                                <p>@v.Date.ToString("M"), @v.Date.ToString("yyyy")</p>
                        </div>
                        } 
                    </div>
                </div>
            </div>
        </div>

        <!--МЕРОПРИЯТИЯ-->
        <div class="event">
            <div class="top_event">
                <p>Мероприятия</p>
                <ul>
                    <li><a href="#">все мероприятия</a></li>
                </ul>
            </div>
            <div class="bottom_event">
                <div class="carousel_event">
                    <div class="carousel_listevent" data-flickity='{"groupCells": true, "prevNextButtons":false}'>
                        <!--КАРТОЧКА-->
                        @foreach (var e in Model.Events)
                        {
                            <div class="fire">
                                <div class="carousel_itemevent">
                                    <div class="eventdate">
                                        <h2 class="number">@e.StartDate.ToString("dd")</h2>
                                        <div class="dayear">
                                            <h2 class="day">@e.StartDate.ToString("dddd")</h2>
                                            <h2 class="year">@e.StartDate.ToString("M").Substring(3), @e.StartDate.ToString("yyyy")</h2>
                                        </div>
                                    </div>
                                    <div class="eventtopic">@e.Title  </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--ПОЛЕЗНОЕ-->
        <div class="info">
            <div class="top_info">
                <p>Полезное</p>
            </div>
            <div class="bottom_info">
                <div class="carousel_info">
                    <div class="carousel_info" data-flickity='{"groupCells": true, "pageDots": false}'>
                        <!--КАРТОЧКА-->
                        <div class="arrival">
                            <div class="light">
                                <a href="#" class="imgarrival"></a>
                                <div class="infotopic">Поступление 2019</div>
                                <a href="#" class="separator1"></a>
                                <div class="infocontent">В настоящее время, пока поправки об ограничении числа вузов для подачи документов</div>
                            </div>
                        </div>
                        <!--КАРТОЧКА-->
                        <div class="table">
                            <div class="light">
                                <a href="#" class="imgtable"></a>
                                <div class="infotopic">Расписания и графики</div>
                                <a href="#" class="separator2"></a>
                                <div class="infocontent">График движения поездов является организующей и технологической основой работы</div>
                            </div>
                        </div>
                        <!--КАРТОЧКА-->
                        <div class="profcom">
                            <div class="light">
                                <a href="#" class="imgprofcom"></a>
                                <div class="infotopic">Профком</div>
                                <a href="#" class="separator3"></a>
                                <div class="infocontent">Организованная по определённым правилам деятельность людей</div>
                            </div>
                        </div>
                        <!--КАРТОЧКА-->
                        <div class="sci">
                            <div class="light">
                                <a href="#" class="imgsci"></a>
                                <div class="infotopic">Научная деятельность</div>
                                <a href="#" class="separator4"></a>
                                <div class="infocontent">Интеллектуальная деятельность, направленная на получение </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </main>

    <!--ПОДВАЛ-->
    <footer>
        <div class="top-footer">
            <div class="footer1">
                <div class="footer_logo">ФТИ</div>
                <div class="textinfo">
                    <p>Информационно-медийный ресурс Физико-Технического института</p>
                    <p>Петрозаводского государственного университета. Сайт поддерживается и</p>
                    <p>пополняется сотрудниками администрации института.</p>
                    </br>
                    <p>© 2010 - 2019 Физико-технического институт (ФТИ)</p>
                </div>
                <div class="social">
                    <a href="#" class="vk"></a>
                    <a href="#" class="instagram"></a>
                    <a href="#" class="moroshka"></a>
                </div>
            </div>
            <div class="footer3">
                <div class="contacts">Контакты</div>
                <div class="contactinfo">
                    <p><span class="colortext">Адрес: </span>ул. Университетская, д. 10a,</p>
                    <p>Петрозаводск, 185002</p>
                    <p><span class="colortext">Дирекция:</span> fti@petrsu.ru</p>
                    <p>(814-2) 71-96-76</p>
                </div>
            </div>
            <div class="footer2">
                <div class="poleznoe">Другое</div>
                <div class="sspoleznoe">
                    <ul>
                        <li><a href="#">Обратная связь</a></li>
                        <li><a href="#">Контакты</a></li>
                        <li><a href="#">Политика конфидециальности</a></li>
                        <li><a href="#">Карта сайта</a></li>
                    </ul>
                </div>
            </div>
    </footer>
    <script src='~/Scripts/main.js'></script>
</body>
</html>
