@model Diploma.ViewModels.ResetPasswordViewModel

@{
    Layout = null;
    ViewBag.Title = "Сброс пароля";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <!-- Template Styles -->
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css">

    <!-- CSS Reset -->
    <link rel="stylesheet" href="~/Content/css/normalize.css">

    <!-- Milligram CSS minified -->
    <link rel="stylesheet" href="~/Content/css/milligram.min.css">

    <!-- Main Styles -->
    <link rel="stylesheet" href="~/Content/css/admin_style.css">
</head>
<body>
    <div class="container">
        <div class="column ">
            <div class="card">
                <div class="card-title">
                    <h4 style="color: black;">Смена пароля</h4>
                </div>
                <div class="card-block">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary()

                        @Html.HiddenFor(x => x.Code);

                        <label>Email</label>
                        @Html.EditorFor(x => x.Email, new { htmlAttributes = new { placeholder = "Введите вашу почту" } })

                        <br />

                        <label>Новый пароль</label>
                        @Html.EditorFor(x => x.Password, new { htmlAttributes = new { placeholder = "Введите новый пароль" } })
                        <button type="submit">Сменить</button>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
</html>