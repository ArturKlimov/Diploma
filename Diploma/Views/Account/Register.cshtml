<div class="row grid-responsive">
    <div class="column ">
        <div class="card">
            <div class="card-title">
                <h3>Регистрация нового пользователя</h3>
            </div>
            <div class="card-block">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                <fieldset>
                    <label for="nameField">E-mail</label>
                    <input required type="email" placeholder="Введите email" id="nameField"> @*Добавить Email*@
                    <label for="nameField">ФИО пользователя</label>
                    <input required type="text" placeholder="Введите ФИО" id="nameField">    @*Добавить ФИО*@
                    <label for="nameField">Логин пользователя</label>
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { placeholder = "Введите логин" } })
                    <label for="nameField">Пароль</label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Введите пароль" } })
                    <br />
                    <input class="button-primary" type="submit" value="Зарегистрировать">   @*Сделать кнопку*@
                </fieldset>
                }
            </div>
        </div>
    </div>
</div>

