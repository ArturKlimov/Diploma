@model Diploma.Models.Event

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<div class="breadcr">
    <ul class="breadcrumbs">
        <li><a href="/">Главная</a></li>
        <li><a href="/events">Мероприятия</a></li>
        <li><a href="#">@ViewBag.Bread</a></li>
    </ul>
</div>

<div class="eventmainpage">
    <div class="eventlistpage">
        <div class="eventcatdate">
            <div class="start">Начало:</div>
            <p>@Model.StartDate.ToString("M"), @Model.StartDate.ToString("yyyy")<p>
                <div class="horisontline"></div>
                <div class="end">Конец:</div>
            <p>@Model.EndDate.ToString("M"), @Model.EndDate.ToString("yyyy")</p>
        </div>
        <a href="#" class="eventbtnpage">@Model.Title</a>
        <div class="newsimgpage" style="background-image: url(@Model.ImagePath);">
        </div>
        <p style="white-space:pre-line;">@Model.Description</p>
        </br>
        </br>
    </div>


    <div class="vk_wid">
        <script type="text/javascript" src="https://vk.com/js/api/openapi.js?160"></script>

        <!-- VK Widget -->
        <div id="vk_groups"></div>
        <script type="text/javascript">
	      VK.Widgets.Group("vk_groups", {mode: 3, width: "318", color1: 'F3F6FD'}, 18079046);
        </script>
    </div>
</div>
