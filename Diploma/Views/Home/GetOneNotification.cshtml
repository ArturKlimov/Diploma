@model Diploma.Models.Notification

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<div class="breadcr">
    <ul class="breadcrumbs">
        <li><a href="/">Главная</a></li>
        <li><a href="/notifications">Объявления</a></li>
        <li><a href="#">@ViewBag.Bread</a></li>
    </ul>
</div>
<div class="adsmainpage">
    <div class="adslistpage">
        <div class="catdateads">
            <div class="author">@Model.Author</div>
            <div class="circle"></div>
            <p>@Model.Date.ToString("M"), @Model.Date.ToString("yyyy")</p>
        </div>
        <a href="#" class="adsbtnpage">@Model.Title</a>
        <p style="white-space:pre-line;">@Model.Description</p>

        <div class="download">
            <ul>
                @if (Model.DocumentPath1 != "")
                {
                    <li><a href="@Model.DocumentPath1" download><em class="fa fa-file"></em> @ViewBag.DocumentName1</a></li>
                }
                @if (Model.DocumentPath2 != "")
                {
                    <li><a href="@Model.DocumentPath2" download><em class="fa fa-file"></em> @ViewBag.DocumentName2</a></li>
                }
            </ul>
        </div>
    </div>

    <div class="vk_wid">
        <script type="text/javascript" src="https://vk.com/js/api/openapi.js?160"></script>

        <!-- VK Widget -->
        <div id="vk_groups"></div>
        <script type="text/javascript">
            VK.Widgets.Group("vk_groups", { mode: 3, width: "318", color1: 'F3F6FD' }, 18079046);
        </script>
    </div>
</div>

