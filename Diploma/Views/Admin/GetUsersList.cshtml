<h5 class="mt-2">Пользователи</h5><a class="anchor" name="users"></a>
<div class="row grid-responsive">
    <div class="column ">
        <div class="card">
            <div class="card-title">
                <h3>Список зарегистрированных пользователей в системе</h3>
            </div>
            <div class="card-block">
                <table>
                    <thead>
                        <tr>
                            <th>ФИО Пользователя</th>
                            <th>Логин</th>
                            <th>E-mail</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var n in Model)
                        {
                        <tr>
                            <td>@n.Name</td>
                            <td>@n.UserName</td>
                            <td>@n.Email</td>
                            <td><a href="/account/deleteuser/@n.Id">Удалить</a></td>
                        </tr>
                        }
                        
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
