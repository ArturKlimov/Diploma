@model Diploma.Models.New

@{
    ViewBag.Title = "Редактирование новости" + Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактировать новость @Model.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)

    <label>Заголовок</label>
    <br />
    @Html.EditorFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Title, "")
    <br />
    <br />

    <label>Категория новости</label>
    <br />
    @Html.DropDownListFor(model => model.CategoryID, ViewBag.Categories as SelectList)
    <br />
    <br />

    <label>Описание новости</label>
    <br />
    @Html.TextAreaFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description, "")
    <br />
    <br />


    @Html.HiddenFor(model => model.ImagePath)
    @Html.HiddenFor(model => model.Date)

    <input type="submit" value="Редактировать" />

}

<a href="/admin">Вернуться</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
