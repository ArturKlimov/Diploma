@model Diploma.Models.Email

@{
    ViewBag.Title = "Подписка на рассылку";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Подписать на рассылку</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <label>Email</label>
    <br />
    @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
    <br />
    <br />
    <label>Владелец почты</label>
    <br />
    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    <br />
    <br />
    <label>Группа</label>
    <br />
    @Html.DropDownListFor(model => model.RecipientID, ViewBag.Recipients as SelectList)
    <br />
    <br />
    <input type="submit" value="Подписать" class="btn btn-default" />
}

<a href="/admin">Вернуться</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
