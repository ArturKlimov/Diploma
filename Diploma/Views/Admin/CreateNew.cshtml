@model Diploma.Models.New

@{
    ViewBag.Title = "Опубликовать новость";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Опубликовать новость</h2>


@using (Html.BeginForm("CreateNew", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <label>Заголовок</label>
    <br />
    @Html.EditorFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Title, "")
    <br />
    <br />

    <label>Категория новости</label>
    <br />
    @Html.DropDownListFor(model => model.CategoryID, ViewBag.Categories as SelectList)
    <br />
    <br />

    <label>Описание новости</label>
    <br />
    @Html.TextAreaFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description, "")
    <br />
    <br />

    <label>Картинка для новости</label>
    <br />
    <input type="file" name="imageFile" multiple accept="image/*,image/jpeg">
    <br />
    <br />
    <input type="submit" value="Опубликовать" />

}

@Html.ActionLink("Вернуться", "Index")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
