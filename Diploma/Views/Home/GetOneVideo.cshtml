@model Diploma.Models.Video

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/Layout2.cshtml";
}
<div class="breadcr">
    <ul class="breadcrumbs">
        <li><a href="/">Главная</a></li>
        <li><a href="/videos">Видео</a></li>
        <li><a href="#">@ViewBag.Bread</a></li>
    </ul>
</div>

<div class="videomainpage">
    <div class="videolistpage">
        <div class="catdate">
            <p>@Model.Date.ToString("M"), @Model.Date.ToString("yyyy")</p>
        </div>
        <a href="#" class="videobtnpage">@Model.Title</a>
        <iframe class="videoimgpage" type="text/html" width="640" height="385" src="http://www.youtube.com/embed/@Model.YoutubeID" frameborder="0"></iframe>
        <p style="white-space:pre-line;">@Model.Description</p>
        </br>
        </br>
    </div>


    <div class="vk_wid">
        <script type="text/javascript" src="https://vk.com/js/api/openapi.js?160"></script>

        <!-- VK Widget -->
        <div id="vk_groups"></div>
        <script type="text/javascript">
	      VK.Widgets.Group("vk_groups", {mode: 3, width: "318", color1: 'F3F6FD'}, 18079046);
        </script>
    </div>
</div>



